@import "./includes/highlight"

.post-view

.post-view__article
  padding: 0rem 2rem 6rem 2rem
  overflow-x: hidden




article.post-view__article
  .article__content

    code
      background: #ccc
      color $color-black-2

    

    figure.highlight
    
      font-family monospace
      color $color-black-2
      background: #ccc
      border-top 2px solid #ccc
      border-bottom 2px solid #ccc
      
      overflow-y: hidden
      margin 1.5em 0

      table
        border 0

        margin 0 !important
        tbody
          tr
            border-top 0 !important
            background none !important
            td
              &.gutter
                text-align right
              border 0
              .line
                height 1.45em
              


    h1,h2,h3,h4,h5,h6
      margin: 1em 0
    h1
      text-size(m-4)
    h2
      text-size(m-3)
    h3
      text-size(m-2)
    h4
      text-size(m-1)
    h5
      text-size(s-3) 
    h6
      text-size(s-2)
    p,li,ol,table,code
      text-size(s-1)
    small
      font-size: 1rem
    a
      box-shadow: inset 0 -0.1em 0 $color-black-2
      transition:all .3s cubic-bezier(.71,0,0,.99)
      text-decoration: none
      &:hover
        box-shadow: inset 0 -0.8em 0 $color-main

    blockquote
      padding: 0em 1rem

    blockquote:before {
      font-family: auto;
      color: #EEE;
      content: open-quote;
      font-size: 4em;
      line-height: 0.6em;
      margin-right: 0.15em;
      vertical-align: -0.3em;
    }

    blockquote p {
      display: inline;
    }
   
    p,pre
      padding: 0.3em 0

    ol
      list-style: decimal
      text-size(s-2)
      padding-left: 1.6em
      li
        padding: 0.15em 0

    ul
      list-style: none
      text-size(s-2)
      padding-left: 1em
      li:before{
        content: "â€¢";
        margin: 0 .5rem 0 0;
        color: color-black-2;
        font-weight: 600
      }
      li
        padding: 0.15em 0

    img
      width: auto
      max-width: 100%
      margin: 2rem 0

    table
      margin: 2rem 0
      border-spacing: 0
      border-collapse: collapse
      border-top: 2px $color-black-2 solid
      border-bottom: 2px $color-black-2 solid
      th,td
        border: 1px $color-light-gray solid
        padding: 0.3em 1em
      th
        border-bottom: 2px $color-black-2 solid
      td:last-child,th:last-child
        border-right: none
      td:first-child,th:first-child
        border-left: none


@media screen and (max-width: $M)
  .post-view__article
    padding: 0rem 1rem 6rem 1rem
