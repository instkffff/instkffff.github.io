.location-bar
  position: relative
  .line-1
    margin-bottom: 2px
  .text_warp
    text-align: center
  .text
    text-size(s-1)
    margin: 0.2em 0
    padding: 0 4rem
    overflow: hidden
    text-overflow:ellipsis
    white-space: nowrap
    a
      margin-left: 1em
      margin-right: 1em
      pointer-events: none
      text-decoration: none
    .active
      pointer-events: all
      text-decoration: none
      box-shadow: inset 0 -0.3em 0 $color-main
      transition:box-shadow .5s cubic-bezier(.71, 0, 0, .99)
    .active:hover
      box-shadow: inset 0 -0.8em 0 $color-main
  .line-1,.line-2,.line-3
    background: $color-black-2
